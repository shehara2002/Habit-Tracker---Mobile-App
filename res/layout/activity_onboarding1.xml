<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UI.Onboarding1Activity">

    <ImageView
        android:layout_width="300dp"
        android:id="@+id/searchImage"
        android:layout_height="300dp"
        android:src="@drawable/onboard1"
        android:layout_marginTop="150dp"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_habits"
        android:textColor="@color/primary"
        android:id="@+id/boarding_des1"
        android:layout_below="@id/searchImage"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="32sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/build_better_routines_and_track_your_progress_easily"
        android:textColor="@color/black"
        android:id="@+id/boarding_des2"
        android:layout_below="@+id/boarding_des1"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Next"
        android:layout_below="@+id/boarding_des2"
        android:id="@+id/onboarding1Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>



</RelativeLayout>